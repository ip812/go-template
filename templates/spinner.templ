package templates

import (
    "github.com/ip812/go-template/templates/icon"
)

templ Spinner() {
	<div
		id="spinner"
		class="flex items-center justify-center h-full w-full"
	>

	    @icon.LoaderCircle(icon.Props{
	        Class: "spinner animate-spin",
	    })
		<div class="spinner-content">
			{ children... }
		</div>
	</div>
}
